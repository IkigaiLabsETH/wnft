{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declarationMap": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
